@model App.Etiketarte.Model.Presentacion

<section class="main-container col-md-9">
    <div>
        <div class="page-title">
            <h1>Detalle de etiketa</h1>
        </div>
        <div class="box">
            <div class="form-group form-theme">
                @Html.LabelFor(model => model.UnidadPorPaquete, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DetailFor(model => model.UnidadPorPaquete, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group form-theme">
                @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DetailFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group form-theme">
                <div class="checkbox">
                    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.DisplayFor(model => model.Estado)
                </div>
            </div>
            <div class="form-group form-theme">
                <div class="form-actions">
                    @Html.BackAction("Presentaciones", new { id = Model.IdEtiketa })
                </div>
            </div>
        </div>
    </div>
</section>