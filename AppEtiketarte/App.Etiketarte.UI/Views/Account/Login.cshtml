@using Microsoft.Owin.Security

@{
    var context = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
    var authenticationType = context.FirstOrDefault()?.AuthenticationType;
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-4">
        <section id="socialLoginForm">
            @using (Html.BeginForm("Login", "Account", new { provider = authenticationType }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <button type="submit" class="btn btn-default" id="" name="provider" value="" title=""></button>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}